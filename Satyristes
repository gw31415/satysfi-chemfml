;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "chemfml")
  ;; Library version
  (version "1.0.0")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-chemfml.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "chemfml-doc")
  ;; Library version
  (version "1.0.0")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "chemfml.saty" "-o" "chemfml.pdf")))
  ;; Files
  (sources
    ((doc "chemfml.pdf" "doc/chemfml.pdf")))
  ;; OPAM package file
  (opam "satysfi-chemfml-doc.opam")
  ;; Dependency
  (dependencies
    ((chemfml ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
     (easytable ()) ; Easytable library
    )))
